<%= form_for :book, url: books_path do |f| %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :no_of_copies %><br>
    <%= f.text_field :no_of_copies %>
  </p>

  <p>
    <%= f.check_box :available %>
    <%= f.label :available %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', books_path %>