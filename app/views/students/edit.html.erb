<h2>Update Student</h2>
  <%= form_for :student, url: student_path(@student), method: :patch do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.submit "Update student", :class => "btn btn-primary btn-sm" %>
  </p>
<% end %>
 
<%= link_to 'Back', students_path, :class => "btn btn-info btn-sm" %>