<h2>Update Book Management</h2>
  <%= form_for :student_book, url: book_management_path(@student_book), method: :patch do |f| %>
  <p>
    <%= f.label :student_id %><br>
    <%= f.collection_select :student_id, Student.all, :id, :name  %>
  </p>

  <p>
    <%= f.label :book_id %><br>
    <%= f.collection_select :book_id, Book.all, :id, :name  %>
  </p>
 
  <p>
    <%= f.submit "Edit Book Management", :class => "btn btn-primary btn-sm"  %>
  </p>
<% end %>
 
<%= link_to 'Back', book_managements_path, :class => "btn btn-info btn-sm" %>